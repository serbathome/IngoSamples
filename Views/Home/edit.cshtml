@model Todo

@{
    ViewData["Title"] = "Edit the task";
}

<div>
    <form asp-action="Edit" asp-controller="Home" method="post">
        <input asp-for="TodoId" type="hidden" />
        <input asp-for="CreationDate" type="hidden" />
        <input asp-for="CompletionDate" type="hidden" />
        <div class="mb-3">
            <label for="Title" class="form-label">Task Title</label>
            <input asp-for="Title" class="form-control" aria-describedby="TitleHelp" />
            <div id="TitleHelp" class="form-text">Quick title for the task</div>
        </div>
        <div class="mb-3">
            <label for="Details" class="form-label">Details</label>
            <textarea asp-for="Details" class="form-control" aria-describedby="DetailsHelp"></textarea>
            <div id="DetailsHelp" class="form-text">Put notes about the task</div>
        </div>
        <div class="mb-3">
            <label for="isCompleted" class="form-label">Is task completed?</label>
            <input asp-for="isCompleted" type="checkbox" class="form-check-input" aria-describedby="isCompletedHelp" />
            <div id="isCompletedHelp" class="form-text">Completetion status of the task</div>
        </div>
        <div class="mb-3">
            <label for="isStarted" class="form-label">Is task started?</label>
            <input asp-for="isStarted" type="checkbox" class="form-check-input" aria-describedby="isStarteddHelp" />
            <div id="isStartedHelp" class="form-text">Work in progress status of the task</div>
        </div>
        <input class="btn btn-primary" type="submit" value="Save">
    </form>
</div>