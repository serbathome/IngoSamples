@model IEnumerable<Todo>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

@if(@Model is not null)
{
    <table class="table">
        <thead>
            <tr>
                <td>Title</td>
                <td>Details</td>
                <td>Date Created</td>
                <td>Work in Progress</td>
                <td>Completed</td>
                <td>Date Completed</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach(Todo t in Model)
            {
                <tr>
                    <td>@t.Title</td>
                    <td>@t.Details</td>
                    <td>@t.CreationDate.ToShortDateString()</td>
                    <td>@t.isStarted</td>
                    <td>@t.isCompleted</td>
                    <td>@if(t.isCompleted == true)
                        {
                            <span>@t.CompletionDate.ToShortDateString()</span>
                        }
                        else
                        {
                            <span>Not yet</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-TodoId=@t.TodoId>Edit</a> |
                        <a asp-action="Delete" asp-route-TodoId=@t.TodoId>Delete</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
    
</div>
